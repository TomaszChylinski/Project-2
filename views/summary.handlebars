<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/styles/styles.css" media="screen" title="no title" charset="utf-8">



<div class="container">
  <div class="row">
    <div class="col-md-12">

      <ul class="list-group list-group-horizontal">
        <li class="list-group-item">Full Name:<span id="userName" </span></li>
        <li class="list-group-item">Daily Calorie Goal: <span id="dailyCalorieGoal"></span> </span></li>
        <li class="list-group-item">Goal Weight: <span id="goalWeight"></span></li>
        <li class="list-group-item">Current Weight: <span id="currentWeight"> </spanid> </span></li>
        <li class="list-group-item">Age: <span id="age"></spanid></span></li>
        <li class="list-group-item"> Gender: <span id="gender"></spanid> </span></li>
      </ul>

    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-8 offset-2">
      <h2>Input Your meal and calorie consumption</h2>
      <form class="clearfix mb-4" action="POST">
        <div class="form-group">
          <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
            placeholder="Enter Your Meal">
        </div>
        <div class="form-group">
          <label for="example-description">Calorie Total</label>
          <textarea class="form-control" id="example-description" aria-describedby="example-description"
            placeholder="Enter Calorie Total"></textarea>
        </div>
        <button id="submit" class="btn btn-primary float-right">Add Meal</button>
      </form>
      <h3>Meals Logged For Today: <span id="todaysDate"></span></h3>
      <ul id="example-list" class="list-group">
        {{#each examples}}
        <li data-id="{{this.id}}" class="list-group-item">
          <a href="example/{{this.id}}">{{this.text}}</a>
          <button class="btn btn-danger float-right delete">ï½˜</button>
        </li>
        {{/each}}
      </ul>
       <button id="add-calories" class="btn btn-primary float-right">Add Calories</button>
    </div>
         
  </div>
</div>
</div>

<script src="/js/index.js"></script>
<script src="/js/summary-info.js"></script>